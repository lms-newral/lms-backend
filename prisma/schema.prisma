generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  slug         String   @unique
  subdomain    String   @unique
  logoUrl      String?
  appName      String?
  primaryColor String?
  createdAt    DateTime @default(now())
  users        User[]
  Video        Video[]
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  profileImage String?
  email        String
  phoneNumber  String?  @unique
  isVerified   Boolean  @default(false)
  password     String
  name         String
  role         Role     @default(STUDENT)
  deviceLimit  Int      @default(2)
  devices      Device[]
  client       Client   @relation(fields: [clientId], references: [id])
  clientId     String   @db.ObjectId
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Otp          Otp?
  otpId        String?  @db.ObjectId
  Video        Video[]

  @@index([role])
  @@index([email])
  @@index([clientId])
  @@index([isVerified])
  @@index([name])
}

model Device {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @db.ObjectId
  osName       String
  browserName  String
  deviceIp     String
  refreshToken String?
  createdAt    DateTime @default(now())

  @@index([userId])
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @unique @db.ObjectId
  email     String
  otp       String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model Video {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  videoUrl     String
  thumbnailUrl String?
  duration     Int? // in seconds
  size         Int? // in bytes
  status       VideoStatus @default(PROCESSING)

  teacher   User   @relation(fields: [teacherId], references: [id])
  teacherId String @db.ObjectId
  client    Client @relation(fields: [clientId], references: [id])
  clientId  String @db.ObjectId

  categories String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId])
  @@index([teacherId])
  @@index([status])
  @@index([categories])
}

enum VideoStatus {
  PROCESSING
  READY
  FAILED
  DELETED
}
